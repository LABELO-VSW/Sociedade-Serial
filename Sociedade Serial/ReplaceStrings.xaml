<Window x:Class="Sociedade_Serial.ReplaceStrings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sociedade_Serial"
        mc:Ignorable="d"
        Title="Informe os valores abaixo" Width="300" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100px"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" FontWeight="Bold" Grid.Row="0">
            <StackPanel Name="stack" Orientation="Vertical" Margin="10" VerticalAlignment="Top">
            </StackPanel>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Button Name="OK" Click="OK_Click" Content="OK" DockPanel.Dock="Bottom" Foreground="Black" Width="100px"/>
            <Button Name="Cancel" Click="Cancel_Click" Content="Cancelar" DockPanel.Dock="Bottom" Foreground="Black" Width="100px"/>
        </StackPanel>

    </Grid>
    <Window.Resources>
        <ResourceDictionary Source="/styles.xaml"/>
    </Window.Resources>
</Window>
